<% include ../partials/header %>

<div class="text-center">
  <h1><%= displayName %>'s Polls</h1>  
</div>

<div class="row">
  <div class="col-sm-6 col-md-6 col-lg-6">
    <div class="well table-responsive text-center">
      <table class="table">
        <% if (polls.length > 0) { polls.forEach(function(poll) { %>
          <tr>
            <td>
              <a href="/user/<%= poll._id %>"><h3><%= poll.name %></h3></a>
            </td>
          </tr>
        <% }); } else { %>
          <h3>There are no polls.</h3>
        <% } %>
      </table>
    </div>      
  </div>

  <div class="col-sm-6 col-md-6 col-lg-6">
    <div class="well">
      <h3>Create New Poll</h3>
      <form action='/user' method='POST'>
        <label>Name</label> <input name='name' type='text' class="form-control" />
        <div id="options" class="form-group">
          <label>Option</label> <input name='options' type='text' class="form-control" />
          <label>Option</label> <input name='options' type='text' class="form-control" />
          <label>Option</label> <input name='options' type='text' class="form-control" />
        </div>
        <div class="form-group">
          <input id='add-option' type="button" value="+ Add Option" class='btn form-control'/>
        </div>
        <div class="form-group">
          <input type='submit' value='Create Poll' class="btn form-control" />
        </div>
      </form>
    </div>
  </div>
</div>

<div class='text-center'>
  <a href='/' class='btn' role='button'>Back to Homepage</a>
</div>

<% include ../partials/footer %>
